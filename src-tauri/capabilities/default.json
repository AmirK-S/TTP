{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window, floating bar, setup window, and tray",
  "windows": ["main", "floating-bar", "setup"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:event:allow-listen",
    "core:event:allow-unlisten",
    "core:webview:default",
    "core:webview:allow-webview-position",
    "core:window:default",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:window:allow-set-focus",
    "core:window:allow-close",
    "opener:default",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "global-shortcut:allow-is-registered",
    "positioner:default",
    "keyring:default",
    "keyring:allow-get-password",
    "keyring:allow-set-password",
    "keyring:allow-delete-password",
    "mic-recorder:default",
    "mic-recorder:allow-start-recording",
    "mic-recorder:allow-stop-recording",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text",
    "notification:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://api.openai.com/*" }
      ]
    }
  ]
}
